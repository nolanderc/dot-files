hide_edge_borders both

focus_wrapping yes

for_window [floating] border normal
for_window [tiling] border normal 1

# Handle power button
set $mode_system System  (l)ock  (e)xit  (s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id loginctl lock-session, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Mod4+l mode "$mode_system"
bindsym XF86PowerOff mode "$mode_system"


set $mode_media Media    [j] Brightness [k]     [h] Volume [l]
mode "$mode_media" {
    bindsym j exec --no-startup-id brightnessctl s 5%-
    bindsym k exec --no-startup-id brightnessctl s 5%+

    bindsym h exec --no-startup-id amixer set Master playback 5%-
    bindsym l exec --no-startup-id amixer set Master playback 5%+

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym Mod4+m mode "$mode_media"

for_window [class="Blueman-manager"] floating enable
for_window [class="Pavucontrol"] floating enable

